<% if @author_errors %>
  <% @author_errors.each do |key, value| %>
    <p><%= "Error: #{key.to_s.capitalize} #{value.join(" and ")}." %></p>
  <% end %>
<% end %>

<%= form_for author do |f| %>
  <p>
    <%= f.label :name %>
  </p>
  <p>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :picture %>
  </p>
  <p>
    <%= f.text_field :picture %>
  </p>
  <%= f.submit data: {confirm: "If you do this, you will be creating a new author."} %>
<% end %>
