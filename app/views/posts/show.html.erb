  <h1 class=" xs-small-margin font-kern link-visited"><span style="color:#591D0A"><%= link_to @post.title, post_path(@post.id) %> </span></h1>
</div>
<div class="row">
  <div class="hidden-xs hidden-sm col-md-4 bahia couriernew"><%= image_tag @post.author_picture, class: "img-responsive img-extra-rounded" %> <%= @post.author %> </div>
